@model product_stock_mvc.Web.DTOs.ProductDTO

@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Are you sure you want to delete @Model.Name?</h3>
<br/>
<div>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <img src="~/img/@Model.Image" alt="@Model.Image" style="width:125px; height:125px; border: 1px solid; margin: 0px; padding: 0px;"/>
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                 @Html.DisplayFor(model => model.Description)
            </td>
            <td>
                @Html.DisplayFor(model => model.Provider.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Price)
            </td>
            <td>
                @Html.DisplayFor(model => model.QuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(model => model.IsActive)
            </td>
        </tr>
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-warning text-white"asp-action="Index">Cancel</a>
    </form>
</div>

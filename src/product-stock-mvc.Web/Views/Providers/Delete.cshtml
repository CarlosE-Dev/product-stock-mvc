@model product_stock_mvc.Web.DTOs.ProviderDTO

@{
    ViewData["Title"] = "Delete Provider";
}

<h1>@ViewData["Title"]</h1>
<h3 class="text-danger">Are you sure you want to delete @Model.Name?</h3>
<br/>
<div>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                 @Html.DisplayFor(model => model.Document)
            </td>
            <td>
                @Html.DisplayFor(model => model.ProviderType)
            </td>
            <td>
                @Html.DisplayFor(model => model.IsActive)
            </td>
        </tr>
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-warning text-white"asp-action="Index">Cancel</a>
    </form>
</div>
